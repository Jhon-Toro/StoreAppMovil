<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#E8F5E9"
    android:gravity="center">

    <!-- Animación o Icono -->
    <ImageView
        android:id="@+id/success_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_success"
        android:contentDescription="Éxito"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Título -->
    <TextView
        android:id="@+id/tv_success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Gracias por tu compra!"
        android:textColor="#1B5E20"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tv_success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu pago fue exitoso y tu orden ha sido confirmada."
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp" />

    <!-- Botón de continuar -->
    <Button
        android:id="@+id/btn_continue_shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar comprando"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:textStyle="bold" />
</LinearLayout>
